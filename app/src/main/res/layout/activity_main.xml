<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hacunamatata.rikkeisoft_broadcastsender.MainActivity"
    >

    <Button
        android:id="@+id/btn_goto_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_open_A"
        android:textAllCaps="false"
        android:onClick="goToAppA"
        android:layout_centerInParent="true"
        android:layout_above="@id/btn_goto_B"/>

    <Button
        android:id="@+id/btn_goto_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_open_B"
        android:textAllCaps="false"
        android:onClick="goToAppB"
        android:layout_centerInParent="true"/>


</RelativeLayout>
